<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context="com.example.yuanshuai.find.fragment.MessageFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/appyellow">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="留言"
            android:textSize="24sp"
            android:layout_marginTop="40dp"
            android:gravity="center"/>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:weightSum="1">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/comment"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="评论"
                android:textSize="20sp"/>
            <TextView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/comment"
                android:layout_marginLeft="18dp"
                android:text="1"
                android:textColor="@color/appwhilte"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:background="@drawable/messageback"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"></LinearLayout>
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="#97a3af"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="20dp"/>
        </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/appgray"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal"
                android:weightSum="1">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@mipmap/good"
                    android:layout_marginLeft="18dp"
                    android:layout_marginRight="18dp"
                    android:layout_gravity="center_vertical"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="收到的赞"
                    android:textSize="20sp"/>
                <TextView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/good"
                    android:layout_marginLeft="18dp"
                    android:text="1"
                    android:textColor="@color/appwhilte"
                    android:gravity="center"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/messageback"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"></LinearLayout>
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="#97a3af"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="20dp"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/appgray"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal"
                android:weightSum="1">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@mipmap/xitongmessage"
                    android:layout_marginLeft="18dp"
                    android:layout_marginRight="18dp"
                    android:layout_gravity="center_vertical"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="系统消息"
                    android:textSize="20sp"/>
                <TextView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/xitong"
                    android:layout_marginLeft="18dp"
                    android:text="1"
                    android:textColor="@color/appwhilte"
                    android:gravity="center"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/messageback"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"></LinearLayout>
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="#97a3af"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="20dp"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/appgray"/>
            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/messagelist"></android.support.v7.widget.RecyclerView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
